---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Hero } from '../components/relay/Hero';
import { AgenticAI } from '../components/relay/AgenticAI';
import { Problem } from '../components/relay/Problem';
import { Patterns } from '../components/relay/Patterns';
import { Process } from '../components/relay/Process';
import { Fit } from '../components/relay/Fit';
import { About } from '../components/relay/About';
import { CTA } from '../components/relay/CTA';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="min-h-screen">
			<Hero client:load />
			<AgenticAI />
			<Problem />
			<Patterns client:load />
			<Process />
			<Fit />
			<About />
			<CTA />
		</main>
		<Footer />
	</body>
</html>
